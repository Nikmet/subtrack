generator client {
    provider = "prisma-client"
    output   = "../app/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id                         String               @id @default(uuid()) @db.Uuid
    email                      String               @unique
    password                   String
    name                       String
    avatarLink                 String?
    role                       UserRole             @default(USER)
    isBanned                   Boolean              @default(false)
    banReason                  String?
    bannedAt                   DateTime?
    subscriptions              UserSubscription[]
    paymentMethods             PaymentMethod[]
    notifications              Notification[]
    createdCommonSubscriptions CommonSubscription[] @relation("CommonSubscriptionCreatedBy")
    moderatedCommonSubs        CommonSubscription[] @relation("CommonSubscriptionModeratedBy")
}

model Bank {
    id             String          @id @default(uuid()) @db.Uuid
    name           String          @unique
    iconLink       String
    createdAt      DateTime        @default(now())
    updatedAt      DateTime        @updatedAt
    paymentMethods PaymentMethod[]
}

model CommonSubscription {
    id                 String                   @id @default(uuid()) @db.Uuid
    name               String
    imgLink            String
    category           SubscriptionCategory
    price              Decimal                  @db.Decimal(10, 2)
    period             Int                      @db.SmallInt
    status             CommonSubscriptionStatus @default(PENDING)
    createdByUserId    String?                  @db.Uuid
    moderatedByUserId  String?                  @db.Uuid
    moderatedAt        DateTime?
    moderationComment  String?
    createdAt          DateTime                 @default(now())
    updatedAt          DateTime                 @updatedAt
    subscriptions      UserSubscription[]
    createdByUser      User?                    @relation("CommonSubscriptionCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull, onUpdate: Cascade)
    moderatedByUser    User?                    @relation("CommonSubscriptionModeratedBy", fields: [moderatedByUserId], references: [id], onDelete: SetNull, onUpdate: Cascade)

    @@index([name])
    @@index([category])
    @@index([status])
    @@index([createdByUserId])
    @@index([moderatedByUserId])
}

model UserSubscription {
    id                   String             @id @default(uuid()) @db.Uuid
    userId               String             @db.Uuid
    commonSubscriptionId String             @db.Uuid
    paymentMethodId      String?            @db.Uuid
    nextPaymentAt        DateTime
    paymentCardLabel     String
    createdAt            DateTime           @default(now())

    user               User               @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    commonSubscription CommonSubscription @relation(fields: [commonSubscriptionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    paymentMethod      PaymentMethod?     @relation(fields: [paymentMethodId], references: [id], onDelete: SetNull, onUpdate: Cascade)

    @@unique([userId, commonSubscriptionId])
    @@index([userId, nextPaymentAt])
    @@index([commonSubscriptionId])
    @@index([paymentMethodId])
}

model Notification {
    id        String   @id @default(uuid()) @db.Uuid
    userId    String   @db.Uuid
    kind      String
    title     String
    message   String
    createdAt DateTime @default(now())

    user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

    @@index([userId, createdAt])
}

model PaymentMethod {
    id            String             @id @default(uuid()) @db.Uuid
    userId        String             @db.Uuid
    bankId        String             @db.Uuid
    cardNumber    String
    isDefault     Boolean            @default(false)
    createdAt     DateTime           @default(now())
    updatedAt     DateTime           @updatedAt
    user          User               @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    bank          Bank               @relation(fields: [bankId], references: [id], onDelete: Restrict, onUpdate: Cascade)
    subscriptions UserSubscription[]

    @@index([userId])
    @@index([bankId])
    @@index([userId, isDefault])
    @@unique([userId, cardNumber])
}

enum SubscriptionCategory {
    streaming
    music
    games
    shopping
    ai
    finance
    other
}

enum UserRole {
    USER
    ADMIN
}

enum CommonSubscriptionStatus {
    PENDING
    PUBLISHED
    REJECTED
}
